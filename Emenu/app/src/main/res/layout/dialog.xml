<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="217dp"
        android:layout_height="64dp"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/less2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000"
            android:gravity="center"
            android:onClick="onMinus"
            android:text="-"
            android:textSize="24sp"
            app:backgroundTint="#FA0000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="68dp"
            android:layout_height="44dp"
            android:background="#FFFCFC"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/more2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FF0A"
            android:gravity="center"
            android:onClick="onPlus"
            android:text="+"
            android:textSize="24sp"
            app:backgroundTint="#14B51B"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:onClick="onOk"
        android:text="Применить"
        android:textSize="12sp"
        app:backgroundTint="#02B60A"
        app:layout_constraintEnd_toEndOf="@+id/DeleteBut"
        app:layout_constraintStart_toStartOf="@+id/DeleteBut"
        app:layout_constraintTop_toBottomOf="@+id/sum" />

    <Button
        android:id="@+id/DeleteBut"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_marginTop="50dp"
        android:onClick="onDelete"
        android:text="Убрать"
        android:textSize="12sp"
        app:backgroundTint="#FF0000"
        app:icon="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button7" />

</androidx.constraintlayout.widget.ConstraintLayout>